				<artifactId>spp-portfolio-manager-utilities</artifactId>
				<version>${revision}</version>
			</dependency>
			<dependency>
				<groupId>spp</groupId>
				<artifactId>spp-portfolio-configuration-manager</artifactId>
				<version>${revision}</version>
			</dependency>
			<dependency>
				<groupId>spp</groupId>
				<artifactId>spp-portfolio-constituents-manager</artifactId>
				<version>${revision}</version>
			</dependency>
			<dependency>
				<groupId>spp</groupId>
